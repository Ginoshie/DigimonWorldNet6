<UserControl x:Class="DigimonWorld.Frontend.WPF.UserControls.HistoricEvolutionPicker.HistoricEvolutionPickerUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:constants="clr-namespace:DigimonWorld.Frontend.WPF.Constants"
             xmlns:historicEvolutionPicker="clr-namespace:DigimonWorld.Frontend.WPF.UserControls.HistoricEvolutionPicker"
             xmlns:userControls="clr-namespace:DigimonWorld.Frontend.WPF.UserControls.HistoricEvolutionPicker.UserControls"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=historicEvolutionPicker:HistoricEvolutionPickerViewModel, IsDesignTimeCreatable=True}">

    <Grid KeyboardNavigation.TabNavigation="None">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="400" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Background="#A45A73" />
        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Background="#6F2D5B" />
        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" Background="#0E5082" />
        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="3" Background="#008742" />
        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="4" Background="#AF642D" />

        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="0"
                BorderBrush="#C7A2AA"
                BorderThickness="3,3,0,0">
            <Border BorderBrush="#8B3D59"
                    BorderThickness="0,0,3,3" />
        </Border>

        <TextBlock Grid.Row="0" Grid.Column="0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Foreground="Black"
                   Margin="10">
            FRESH
        </TextBlock>

        <userControls:HistoricEvolutionButton Grid.Row="1" Grid.Column="0"
                                              Tag="{x:Static constants:EvolutionIcons.FreshStageIcons}" />

        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"
                BorderBrush="#A27B9A"
                BorderThickness="3,3,0,0">
            <Border BorderBrush="#491247"
                    BorderThickness="0,0,3,3" />
        </Border>

        <TextBlock Grid.Row="0" Grid.Column="1"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Foreground="Black"
                   Margin="10">
            IN-TRAINING
        </TextBlock>

        <userControls:HistoricEvolutionButton Grid.Row="1" Grid.Column="1"
                                              Tag="{x:Static constants:EvolutionIcons.InTrainingStageIcons}" />

        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="2"
                BorderBrush="#5483C2"
                BorderThickness="3,3,0,0">
            <Border BorderBrush="#09365B"
                    BorderThickness="0,0,3,3">
            </Border>
        </Border>

        <TextBlock Grid.Row="0" Grid.Column="2"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Foreground="Black"
                   Margin="10">
            ROOKIE
        </TextBlock>

        <userControls:HistoricEvolutionButton Grid.Row="1" Grid.Column="2"
                                              Tag="{x:Static constants:EvolutionIcons.RookieStageIcons}" />

        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="3"
                BorderBrush="#59B06E"
                BorderThickness="3,3,0,0">
            <Border BorderBrush="#015B29"
                    BorderThickness="0,0,3,3">
            </Border>
        </Border>

        <TextBlock Grid.Row="0" Grid.Column="3"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Foreground="Black"
                   Margin="10">
            CHAMPION
        </TextBlock>

        <userControls:HistoricEvolutionButton Grid.Row="1" Grid.Column="3"
                                              Tag="{x:Static constants:EvolutionIcons.ChampionStageIcons}" />

        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="4"
                BorderBrush="#D19667"
                BorderThickness="3,3,0,0">
            <Border BorderBrush="#714321"
                    BorderThickness="0,0,3,3">
            </Border>
        </Border>

        <TextBlock Grid.Row="0" Grid.Column="4"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Foreground="Black"
                   Margin="10">
            ULTIMATE
        </TextBlock>

        <userControls:HistoricEvolutionButton Grid.Row="1" Grid.Column="4"
                                              Tag="{x:Static constants:EvolutionIcons.UltimateStageIcons}" />

    </Grid>
</UserControl>