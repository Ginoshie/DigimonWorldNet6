<Application x:Class="DigimonWorld.Frontend.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conversion="clr-namespace:DigimonWorld.Frontend.WPF.Conversion"
             xmlns:enums="clr-namespace:Shared.Enums;assembly=Shared"
             xmlns:system="clr-namespace:System;assembly=System.Runtime">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Frontend.WPF;component/Windows/GeneralConfig/ResourceDictionary/ConfigurationSectionDimensions.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <FontFamily x:Key="Dw1Font">pack://application:,,,/Frontend.WPF;component/Fonts/DW1_US_Regular.ttf#DW1 US</FontFamily>

            <system:Int32 x:Key="DefaultTooltipDelay">750</system:Int32>
            <system:Double x:Key="DefaultButtonHeight">40</system:Double>
            <system:Double x:Key="DefaultTextHeightSpacing">16</system:Double>
            
            <system:Double x:Key="NavigationButtonWidth">50</system:Double>
            <system:Double x:Key="NavigationButtonTextWidth">80</system:Double>

            <system:Double x:Key="ButtonWidth">50</system:Double>
            <system:Double x:Key="TextBlockWidth">80</system:Double>
            
            <SolidColorBrush x:Key="DefaultBackGroundColor" Color="#2E3841"/>

            <conversion:EnumToImageConverter x:Key="EnumToImageConverter" />

            <GridLength x:Key="DefaultTextBoxGridRowHeight">30</GridLength>

            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource Dw1Font}" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Foreground" Value="#D6D6D8" />
            </Style>

            <Style TargetType="Control">
                <Setter Property="FontFamily" Value="{StaticResource Dw1Font}" />
            </Style>

            <Style TargetType="Grid">
                <Setter Property="Background" Value="{StaticResource DefaultBackGroundColor}" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>