<Window x:Class="DigimonWorld.Frontend.WPF.Windows.GeneralConfig.GeneralConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:generalConfig="clr-namespace:DigimonWorld.Frontend.WPF.Windows.GeneralConfig"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=generalConfig:GeneralConfigWindowViewModel, IsDesignTimeCreatable=True}"
        Title="Configuration"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="Manual"
        Width="500"
        Height="500">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../ResourceDictionaries/Styles/Buttons/DefaultButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Border Background="Transparent" Panel.ZIndex="1">
        <Border CornerRadius="5" BorderBrush="Black" BorderThickness="3" Background="Black">
            <Border CornerRadius="5" BorderBrush="#4A9FC5" BorderThickness="3" Background="#4A9FC5">
                <Border CornerRadius="5" BorderBrush="#90D9FA" BorderThickness="3" Background="#90D9FA">
                    <Border CornerRadius="5" BorderBrush="Black" BorderThickness="3" Background="Black">
                        <Grid>
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Style="{StaticResource DefaultButtonStyle}"
                                            Height="40"
                                            Width="75"
                                            Margin="10, 0"
                                            Content="Save"
                                            Command="{Binding SaveCommand}" />
                                    <Button Style="{StaticResource DefaultButtonStyle}"
                                            Height="40"
                                            Width="75"
                                            Content="Cancel"
                                            Command="{Binding CancelCommand}" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Border>
            </Border>
        </Border>
    </Border>
</Window>