<UserControl x:Class="DigimonWorld.Frontend.WPF.Windows.GeneralConfig.UserControls.HomeConfigurationSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:generalConfig="clr-namespace:DigimonWorld.Frontend.WPF.Windows.GeneralConfig"
             mc:Ignorable="d"
             Height="{StaticResource ConfigurationSectionHeight}"
             Width="{StaticResource ConfigurationSectionWidth}"
             d:DataContext="{d:DesignInstance Type=generalConfig:GeneralConfigWindowViewModel, IsDesignTimeCreatable=True}">

    <Grid>
        <TextBlock TextAlignment="Left"
                   TextWrapping="Wrap">
            This is the configuration menu.<LineBreak />
            <LineBreak />
            Click one of the category buttons on the left to open up the configuration section for that category.<LineBreak />
            <LineBreak />
            Apply the settings as you see fit and press save to store them. Upon (re)booting the tool the settings will be applied.<LineBreak />
            <LineBreak />
            Settings prefixed with an ' * ' are applied both immediately and on startup.
        </TextBlock>
    </Grid>
</UserControl>