<UserControl x:Class="DigimonWorld.Frontend.WPF.Windows.GeneralConfig.UserControls.NarrationConfigurationSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             xmlns:generalConfig="clr-namespace:DigimonWorld.Frontend.WPF.Windows.GeneralConfig"
             mc:Ignorable="d"
             Height="{StaticResource ConfigurationSectionHeight}"
             Width="{StaticResource ConfigurationSectionWidth}"
             d:DataContext="{d:DesignInstance Type=generalConfig:GeneralConfigWindowViewModel, IsDesignTimeCreatable=True}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../ResourceDictionaries/Styles/Buttons/DefaultButtonStyle.xaml" />
                <ResourceDictionary Source="../../../ResourceDictionaries/Styles/Buttons/DefaultOptionPickerButtonStyle.xaml" />
                <ResourceDictionary Source="../../../ResourceDictionaries/Styles/Labels/DefaultSheenLabelStyle.xaml" />
                <ResourceDictionary Source="../../../ResourceDictionaries/Styles/Labels/DefaultLabelStyle.xaml" />
                <ResourceDictionary Source="../../../ResourceDictionaries/Styles/ToolTips/DefaultTooltipRightStyle.xaml" />
                <ResourceDictionary Source="../../../ResourceDictionaries/Styles/DefaultTextboxStyle.xaml" />
                <ResourceDictionary Source="../Styles/SaveButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <system:Double x:Key="OptionWidth">75</system:Double>
            <system:Double x:Key="OptionHeight">24</system:Double>
            <system:Double x:Key="WindowButtonWidth">70</system:Double>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Style="{StaticResource DefaultLabelStyle}" Content="* Narrator mode:" Margin="0, 0, 5, 0" />
            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Style="{StaticResource DefaultOptionPickerButtonStyle}"
                        Height="{StaticResource OptionHeight}"
                        Width="{StaticResource OptionWidth}"
                        Content="Speech"
                        Command="{Binding SetNarratorModeSpeechCommand}"
                        Tag="{Binding IsNarratorModeSpeech}" />
                <Button Style="{StaticResource DefaultOptionPickerButtonStyle}"
                        Height="{StaticResource OptionHeight}"
                        Width="{StaticResource OptionWidth}"
                        Content="Instant"
                        Command="{Binding SetNarratorModeInstantCommand}"
                        Tag="{Binding IsNarratorModeInstant}" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>