<UserControl x:Class="DigimonWorld.Frontend.WPF.Windows.GeneralConfig.UserControls.EvolutionConfigurationSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             xmlns:generalConfig="clr-namespace:DigimonWorld.Frontend.WPF.Windows.GeneralConfig"
             mc:Ignorable="d"
             Height="{StaticResource ConfigurationSectionHeight}"
             Width="{StaticResource ConfigurationSectionWidth}"
             d:DataContext="{d:DesignInstance Type=generalConfig:GeneralConfigWindowViewModel, IsDesignTimeCreatable=True}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../ResourceDictionaries/Styles/Buttons/DefaultButtonStyle.xaml" />
                <ResourceDictionary Source="../../../ResourceDictionaries/Styles/Buttons/DefaultOptionPickerButtonStyle.xaml" />
                <ResourceDictionary Source="../../../ResourceDictionaries/Styles/Labels/DefaultSheenLabelStyle.xaml" />
                <ResourceDictionary Source="../../../ResourceDictionaries/Styles/Labels/DefaultLabelStyle.xaml" />
                <ResourceDictionary Source="../../../ResourceDictionaries/Styles/ToolTips/DefaultTooltipRightStyle.xaml" />
                <ResourceDictionary Source="../../../ResourceDictionaries/Styles/DefaultTextboxStyle.xaml" />
                <ResourceDictionary Source="../Styles/SaveButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <system:Double x:Key="OptionWidth">100</system:Double>
            <system:Double x:Key="OptionHeight">35</system:Double>
            <system:Double x:Key="ToggleOptionWidth">75</system:Double>
            <system:Double x:Key="ToggleOptionHeight">24</system:Double>
            <system:Double x:Key="WindowButtonWidth">70</system:Double>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Style="{StaticResource DefaultLabelStyle}" Content="* Original or mod" Margin="0, 0, 5, 10" />
            <WrapPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0, 0, 0, 10">
                <Button Style="{StaticResource DefaultOptionPickerButtonStyle}"
                        Height="{StaticResource OptionHeight}"
                        Width="{StaticResource OptionWidth}"
                        Content="Original"
                        Command="{Binding SetEvolutionCalculatorModeOriginalCommand}"
                        Tag="{Binding EvolutionCalculatorModeIsOriginal}" />
                <Button Style="{StaticResource DefaultOptionPickerButtonStyle}"
                        Height="{StaticResource OptionHeight}"
                        Width="{StaticResource OptionWidth}"
                        Content="Vice 2 . 1 ( + )"
                        Command="{Binding SetEvolutionCalculatorModeViceCommand}"
                        Tag="{Binding EvolutionCalculatorModeIsVice}" />
            </WrapPanel>

            <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Style="{StaticResource DefaultLabelStyle}" Content="* Optional Vice patches (Vice only)"
                   Margin="0, 0, 5, 0" />
            <Label Grid.Row="3" Grid.Column="0" Style="{StaticResource DefaultLabelStyle}"
                   Content="Myotismon:"
                   Margin="0, 0, 5, 0"
                   IsEnabled="{Binding GameVariantContainsVice}" />
            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Style="{StaticResource DefaultOptionPickerButtonStyle}"
                        Height="{StaticResource ToggleOptionHeight}"
                        Width="{StaticResource ToggleOptionWidth}"
                        Content="ON"
                        Command="{Binding SetEvolutionCalculatorModeViceMyotismonEnabledCommand}"
                        Tag="{Binding ViceMyotismonEnabled}"
                        IsEnabled="{Binding GameVariantContainsVice}" />
                <Button Style="{StaticResource DefaultOptionPickerButtonStyle}"
                        Height="{StaticResource ToggleOptionHeight}"
                        Width="{StaticResource ToggleOptionWidth}"
                        Content="OFF"
                        Command="{Binding SetEvolutionCalculatorModeViceMyotismonDisabledCommand}"
                        Tag="{Binding ViceMyotismonDisabled}"
                        IsEnabled="{Binding GameVariantContainsVice}" />
            </StackPanel>

            <Label Grid.Row="4" Grid.Column="0" Style="{StaticResource DefaultLabelStyle}"
                   Content="Panjyamon:"
                   Margin="0, 0, 5, 0"
                   IsEnabled="{Binding GameVariantContainsVice}" />
            <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Style="{StaticResource DefaultOptionPickerButtonStyle}"
                        Height="{StaticResource ToggleOptionHeight}"
                        Width="{StaticResource ToggleOptionWidth}"
                        Content="ON"
                        Command="{Binding SetEvolutionCalculatorModeVicePanjyamonEnabledCommand}"
                        Tag="{Binding VicePanjyamonEnabled}"
                        IsEnabled="{Binding GameVariantContainsVice}" />
                <Button Style="{StaticResource DefaultOptionPickerButtonStyle}"
                        Height="{StaticResource ToggleOptionHeight}"
                        Width="{StaticResource ToggleOptionWidth}"
                        Content="OFF"
                        Command="{Binding SetEvolutionCalculatorModeVicePanjyamonDisabledCommand}"
                        Tag="{Binding VicePanjyamonDisabled}"
                        IsEnabled="{Binding GameVariantContainsVice}" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>