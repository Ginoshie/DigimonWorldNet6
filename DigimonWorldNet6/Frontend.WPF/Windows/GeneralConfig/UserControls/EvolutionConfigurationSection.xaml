<UserControl x:Class="DigimonWorld.Frontend.WPF.Windows.GeneralConfig.UserControls.EvolutionConfigurationSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             xmlns:generalConfig="clr-namespace:DigimonWorld.Frontend.WPF.Windows.GeneralConfig"
             mc:Ignorable="d"
             Height="{StaticResource ConfigurationSectionHeight}"
             Width="{StaticResource ConfigurationSectionWidth}"
             d:DataContext="{d:DesignInstance Type=generalConfig:GeneralConfigWindowViewModel, IsDesignTimeCreatable=True}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../ResourceDictionaries/Styles/Buttons/DefaultButtonStyle.xaml" />
                <ResourceDictionary Source="../../../ResourceDictionaries/Styles/Buttons/DefaultOptionPickerButtonStyle.xaml" />
                <ResourceDictionary Source="../../../ResourceDictionaries/Styles/Labels/DefaultSheenLabelStyle.xaml" />
                <ResourceDictionary Source="../../../ResourceDictionaries/Styles/Labels/DefaultLabelStyle.xaml" />
                <ResourceDictionary Source="../../../ResourceDictionaries/Styles/ToolTips/DefaultTooltipRightStyle.xaml" />
                <ResourceDictionary Source="../../../ResourceDictionaries/Styles/DefaultTextboxStyle.xaml" />
                <ResourceDictionary Source="../Styles/SaveButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <system:Double x:Key="OptionWidth">100</system:Double>
            <system:Double x:Key="OptionHeight">48</system:Double>
            <system:Double x:Key="WindowButtonWidth">70</system:Double>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="65" />
            </Grid.RowDefinitions>

            <Label Grid.Row="0" HorizontalAlignment="Center" Style="{StaticResource DefaultLabelStyle}" Content="* Evolution calculator mode" Margin="0, 0, 5, 0" />
            <WrapPanel Grid.Row="1" Grid.Column="0" Grid.RowSpan="5" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" >
                <Button Style="{StaticResource DefaultOptionPickerButtonStyle}"
                        Height="{StaticResource OptionHeight}"
                        Width="{StaticResource OptionWidth}"
                        Content="Original"
                        Command="{Binding SetEvolutionCalculatorModeOriginalCommand}"
                        Tag="{Binding EvolutionCalculatorModeIsOriginal}" />
                <Button Style="{StaticResource DefaultOptionPickerButtonStyle}"
                        Height="{StaticResource OptionHeight}"
                        Width="{StaticResource OptionWidth}"
                        Content="Vice 2 . 1 ( + )"
                        Command="{Binding SetEvolutionCalculatorModeViceCommand}"
                        Tag="{Binding EvolutionCalculatorModeIsVice}" />
                <Button Style="{StaticResource DefaultOptionPickerButtonStyle}"
                        Height="{StaticResource OptionHeight}"
                        Width="{StaticResource OptionWidth}"
                        Content="Myotismon"
                        Command="{Binding SetEvolutionCalculatorModeViceMyotismonCommand}"
                        Tag="{Binding EvolutionCalculatorModeIsViceMyotismon}" />
                <Button Style="{StaticResource DefaultOptionPickerButtonStyle}"
                        Height="{StaticResource OptionHeight}"
                        Width="{StaticResource OptionWidth}"
                        Content="Panjyamon"
                        Command="{Binding SetEvolutionCalculatorVicePanjyamonCommand}"
                        Tag="{Binding EvolutionCalculatorModeIsVicePanjyamon}" />
            </WrapPanel>
        </Grid>

        <Button Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource DefaultButtonStyle}"
                Height="{StaticResource DefaultButtonHeight}"
                Width="{StaticResource WindowButtonWidth}"
                Content="Save"
                Command="{Binding SaveCommand}">
            <Button.ToolTip>
                <ToolTip Style="{StaticResource DefaultToolTipRightStyle}" Content="Save and apply the current configuration." />
            </Button.ToolTip>
        </Button>
    </Grid>
</UserControl>