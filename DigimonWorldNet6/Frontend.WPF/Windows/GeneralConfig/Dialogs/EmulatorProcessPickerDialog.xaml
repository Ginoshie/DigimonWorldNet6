<baseClasses:BaseDialogWindow x:Class="DigimonWorld.Frontend.WPF.Windows.GeneralConfig.Dialogs.EmulatorProcessPickerDialog"
                              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                              xmlns:baseClasses="clr-namespace:DigimonWorld.Frontend.WPF.Windows.BaseClasses"
                              xmlns:dialogs="clr-namespace:DigimonWorld.Frontend.WPF.Windows.GeneralConfig.Dialogs"
                              mc:Ignorable="d"
                              d:DataContext="{d:DesignInstance Type=dialogs:EmulatorProcessPickerViewModel, IsDesignTimeCreatable=True}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="300"/>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ListBox ItemsSource="{Binding Processes}"
                     SelectedItem="{Binding SelectedProcess}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="4">
                            <Image Width="20" Height="20"
                                   Source="{Binding Icon}"
                                   Margin="0,0,6,0" />

                            <StackPanel>
                                <TextBlock Text="{Binding Name}" />
                                <TextBlock Text="{Binding Title}" />
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Attach" Margin="5" Command="{Binding SetEmulatorProcessNameCommand}"/>
                <Button Content="Cancel" Margin="5" Command="{Binding CancelCommand}"/>
            </StackPanel>
        </Grid>
    </Grid>
</baseClasses:BaseDialogWindow>
