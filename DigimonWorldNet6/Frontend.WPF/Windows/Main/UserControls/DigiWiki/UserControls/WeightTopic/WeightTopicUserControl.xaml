<UserControl x:Class="DigimonWorld.Frontend.WPF.Windows.Main.UserControls.DigiWiki.UserControls.WeightTopic.WeightTopicUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:weightTopic="clr-namespace:DigimonWorld.Frontend.WPF.Windows.Main.UserControls.DigiWiki.UserControls.WeightTopic"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             Height="554"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=weightTopic:WeightTopicViewModel, IsDesignTimeCreatable=True}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ResourceDictionaries/Styles/Labels/DefaultSheenLabelStyle.xaml" />
                <ResourceDictionary Source="/ResourceDictionaries/Styles/DefaultFocusStyle.xaml" />
                <ResourceDictionary Source="/ResourceDictionaries/Styles/ToolTips/DefaultTooltipRightStyle.xaml" />
                <ResourceDictionary Source="/ResourceDictionaries/Styles/Buttons/DefaultButtonStyle.xaml" />
                <ResourceDictionary Source="/Windows/Main/UserControls/DigiWiki/UserControls/WeightTopic/Styles/HiddenButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <system:Double x:Key="ButtonDimension">40</system:Double>
            <system:Double x:Key="ButtonFontSize">25</system:Double>
            <Thickness x:Key="FoodItemMargin">10</Thickness>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="250"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="230"></ColumnDefinition>
                <ColumnDefinition Width="650"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Grid.Row="0" Grid.Column="0" Source="/Images/Digimon/Shellmon-right.png" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,15,10,15">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="MouseLeftButtonDown">
                        <b:InvokeCommandAction Command="{Binding SpeakShellFactCommand}" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </Image>

            <Border Grid.Row="0" Grid.Column="1" CornerRadius="8" BorderBrush="Black" BorderThickness="3" Margin="0, 10,10, 10" Padding="0" Background="Black">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="MouseLeftButtonDown">
                        <b:InvokeCommandAction Command="{Binding InstantDisplayCommand}" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
                <Border CornerRadius="8" BorderBrush="#4A9FC5" BorderThickness="3" Padding="0" Background="#4A9FC5">
                    <Border CornerRadius="5" BorderBrush="#90D9FA" BorderThickness="3" Padding="0" Background="#2E3841">
                        <Border CornerRadius="5" BorderBrush="Transparent" BorderThickness="0" Padding="0" Background="#77000000">
                            <StackPanel Margin="5">
                                <Grid Background="Transparent">
                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                               Text="Shellmon"
                                               Foreground="#D4D604"
                                               FontSize="15"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Top"
                                               Margin="0,5, 0, 5"
                                               Width="100"
                                               TextWrapping="Wrap" />
                                    <Button Grid.Row="0" Grid.Column="0"
                                            FocusVisualStyle="{StaticResource DefaultFocusStyle}"
                                            Style="{StaticResource DefaultButtonStyle}"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Margin="0,0, 0, 5"
                                            Width="22"
                                            Height="22"
                                            Content="ðŸ“–"
                                            Command="{Binding SpeakWikiTextCommand}">
                                        <Button.ToolTip>
                                            <ToolTip Style="{StaticResource DefaultToolTipRightStyle}" Content="Opens the Food chapter of the guide" />
                                        </Button.ToolTip>
                                    </Button>
                                </Grid>
                                <TextBlock Text="{Binding ShellmonText}"
                                           Foreground="#B3B5B1"
                                           FontSize="14"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           Margin="0, 5"
                                           TextWrapping="Wrap" />
                            </StackPanel>
                        </Border>
                    </Border>
                </Border>
            </Border>
        </Grid>

        <Grid Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="230"></ColumnDefinition>
                <ColumnDefinition Width="650"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Border Grid.Row="0" Grid.Column="0" CornerRadius="8" BorderBrush="Black" BorderThickness="3" Margin="10" Padding="0" Background="Black">
                <Border CornerRadius="8" BorderBrush="#4A9FC5" BorderThickness="3" Padding="0" Background="#4A9FC5">
                    <Border CornerRadius="5" BorderBrush="#90D9FA" BorderThickness="3" Padding="0" Background="#90D9FA">
                        <Border CornerRadius="5" BorderBrush="Black" BorderThickness="3" Padding="10,0" Background="{StaticResource DefaultBackGroundColor}">
                            <StackPanel>
                                <Label VerticalAlignment="Top" Height="40" Width="120" Style="{StaticResource DefaultSheenLabelStyle}" IsTabStop="False">
                                    MORE INFO
                                </Label>

                                <Button FocusVisualStyle="{StaticResource DefaultFocusStyle}"
                                        Style="{StaticResource DefaultButtonStyle}"
                                        Margin="0,0, 0, 5"
                                        Height="{StaticResource DefaultButtonHeight}"
                                        Content="Guide: Weight"
                                        Command="{Binding OpenGuideFoodChapterCommand}">
                                    <Button.ToolTip>
                                        <ToolTip Style="{StaticResource DefaultToolTipRightStyle}" Content="Opens the Weight chapter of the guide" />
                                    </Button.ToolTip>
                                </Button>

                                <Button FocusVisualStyle="{StaticResource DefaultFocusStyle}"
                                        Style="{StaticResource DefaultButtonStyle}"
                                        Margin="0,0, 0, 5"
                                        Height="{StaticResource DefaultButtonHeight}"
                                        Content="Excel: Digimon Raise"
                                        Command="{Binding OpenDigimonRaiseDataSheetCommand}">
                                    <Button.ToolTip>
                                        <ToolTip Style="{StaticResource DefaultToolTipRightStyle}" Content="Opens the Digimon Raise tab of the Data sheet" />
                                    </Button.ToolTip>
                                </Button>

                                <Button FocusVisualStyle="{StaticResource DefaultFocusStyle}"
                                        Style="{StaticResource DefaultButtonStyle}"
                                        Margin="0,0, 0, 5"
                                        Height="{StaticResource DefaultButtonHeight}"
                                        Content="Excel: Food"
                                        Command="{Binding OpenFoodDataSheetCommand}">
                                    <Button.ToolTip>
                                        <ToolTip Style="{StaticResource DefaultToolTipRightStyle}" Content="Opens the Food tab of the Data sheet" />
                                    </Button.ToolTip>
                                </Button>
                            </StackPanel>
                        </Border>
                    </Border>
                </Border>
            </Border>

            <WrapPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 15, 15, 15">
                <Border BorderBrush="#060100" BorderThickness="3,3,0,0">
                    <Border BorderBrush="#6789A5" BorderThickness="0,0,3,3" Background="#354A5B">
                        <Image Width="380" Height="202" Source="Media/profile-section-screen.jpg" Stretch="Fill">
                            <b:Interaction.Triggers>
                                <b:EventTrigger EventName="MouseLeftButtonDown">
                                    <b:InvokeCommandAction Command="{Binding SpeakWeightProfileScreenCommand}" />
                                </b:EventTrigger>
                            </b:Interaction.Triggers>
                        </Image>
                    </Border>
                </Border>
                <Border BorderBrush="#060100" BorderThickness="3,3,0,0" Margin="15,0, 0, 0">
                    <Border BorderBrush="#6789A5" BorderThickness="0,0,3,3" Background="{StaticResource DefaultBackGroundColor}">
                        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" >
                            <WrapPanel Width="180" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{StaticResource DefaultBackGroundColor}">
                                <Button Background="Transparent"
                                        Style="{StaticResource HiddenButtonStyle}"
                                        Command="{Binding SpeakBigBerryCommand}"
                                        Height="{StaticResource ButtonDimension}"
                                        Width="{StaticResource ButtonDimension}"
                                        FontSize="{StaticResource ButtonFontSize}"
                                        Margin="{StaticResource FoodItemMargin}">
                                    <Button.ToolTip>
                                        <ToolTip Style="{StaticResource DefaultToolTipRightStyle}" Content="Information about big berry" />
                                    </Button.ToolTip>
                                    <Button.Content>
                                        <ContentControl Content="/Frontend.WPF;component/Images/Icons/Items/Food/big-berry.png">
                                            <ContentControl.ContentTemplate>
                                                <DataTemplate>
                                                    <Image Source="{Binding}" Stretch="Uniform" Margin="0" />
                                                </DataTemplate>
                                            </ContentControl.ContentTemplate>
                                        </ContentControl>
                                    </Button.Content>
                                </Button>
                                <Button Background="Transparent"
                                        Style="{StaticResource HiddenButtonStyle}"
                                        Command="{Binding SpeakPricklyPearCommand}"
                                        Height="{StaticResource ButtonDimension}"
                                        Width="{StaticResource ButtonDimension}"
                                        FontSize="{StaticResource ButtonFontSize}"
                                        Margin="{StaticResource FoodItemMargin}">
                                    <Button.ToolTip>
                                        <ToolTip Style="{StaticResource DefaultToolTipRightStyle}" Content="Information about pricklypear" />
                                    </Button.ToolTip>
                                    <Button.Content>
                                        <ContentControl Content="/Frontend.WPF;component/Images/Icons/Items/Food/pricklypear.png">
                                            <ContentControl.ContentTemplate>
                                                <DataTemplate>
                                                    <Image Source="{Binding}" Stretch="Uniform" Margin="0" />
                                                </DataTemplate>
                                            </ContentControl.ContentTemplate>
                                        </ContentControl>
                                    </Button.Content>
                                </Button>
                                <Button Background="Transparent"
                                        Style="{StaticResource HiddenButtonStyle}"
                                        Command="{Binding SpeakSteakCommand}"
                                        Height="{StaticResource ButtonDimension}"
                                        Width="{StaticResource ButtonDimension}"
                                        FontSize="{StaticResource ButtonFontSize}"
                                        Margin="{StaticResource FoodItemMargin}">
                                    <Button.ToolTip>
                                        <ToolTip Style="{StaticResource DefaultToolTipRightStyle}" Content="Information about steak" />
                                    </Button.ToolTip>
                                    <Button.Content>
                                        <ContentControl Content="/Frontend.WPF;component/Images/Icons/Items/Food/steak.png">
                                            <ContentControl.ContentTemplate>
                                                <DataTemplate>
                                                    <Image Source="{Binding}" Stretch="Uniform" Margin="0" />
                                                </DataTemplate>
                                            </ContentControl.ContentTemplate>
                                        </ContentControl>
                                    </Button.Content>
                                </Button>
                                <Button Background="Transparent"
                                        Style="{StaticResource HiddenButtonStyle}"
                                        Command="{Binding SpeakChainMelonCommand}"
                                        Height="{StaticResource ButtonDimension}"
                                        Width="{StaticResource ButtonDimension}"
                                        FontSize="{StaticResource ButtonFontSize}"
                                        Margin="{StaticResource FoodItemMargin}">
                                    <Button.ToolTip>
                                        <ToolTip Style="{StaticResource DefaultToolTipRightStyle}" Content="Information about chain melon" />
                                    </Button.ToolTip>
                                    <Button.Content>
                                        <ContentControl Content="/Frontend.WPF;component/Images/Icons/Items/Food/chain-melon.png">
                                            <ContentControl.ContentTemplate>
                                                <DataTemplate>
                                                    <Image Source="{Binding}" Stretch="Uniform" Margin="0" />
                                                </DataTemplate>
                                            </ContentControl.ContentTemplate>
                                        </ContentControl>
                                    </Button.Content>
                                </Button>
                                <Button Background="Transparent"
                                        Style="{StaticResource HiddenButtonStyle}"
                                        Command="{Binding SpeakMoldyMeatCommand}"
                                        Height="{StaticResource ButtonDimension}"
                                        Width="{StaticResource ButtonDimension}"
                                        FontSize="{StaticResource ButtonFontSize}"
                                        Margin="{StaticResource FoodItemMargin}">
                                    <Button.ToolTip>
                                        <ToolTip Style="{StaticResource DefaultToolTipRightStyle}" Content="Information about moldy meat" />
                                    </Button.ToolTip>
                                    <Button.Content>
                                        <ContentControl Content="/Frontend.WPF;component/Images/Icons/Items/Food/moldy-meat.png">
                                            <ContentControl.ContentTemplate>
                                                <DataTemplate>
                                                    <Image Source="{Binding}" Stretch="Uniform" Margin="0" />
                                                </DataTemplate>
                                            </ContentControl.ContentTemplate>
                                        </ContentControl>
                                    </Button.Content>
                                </Button>
                                <Button Background="Transparent"
                                        Style="{StaticResource HiddenButtonStyle}"
                                        Command="{Binding SpeakDigicatfishCommand}"
                                        Height="{StaticResource ButtonDimension}"
                                        Width="{StaticResource ButtonDimension}"
                                        FontSize="{StaticResource ButtonFontSize}"
                                        Margin="{StaticResource FoodItemMargin}">
                                    <Button.ToolTip>
                                        <ToolTip Style="{StaticResource DefaultToolTipRightStyle}" Content="Information about Digicatfish" />
                                    </Button.ToolTip>
                                    <Button.Content>
                                        <ContentControl Content="/Frontend.WPF;component/Images/Icons/Items/Food/digicatfish.png">
                                            <ContentControl.ContentTemplate>
                                                <DataTemplate>
                                                    <Image Source="{Binding}" Stretch="Uniform" Margin="0" />
                                                </DataTemplate>
                                            </ContentControl.ContentTemplate>
                                        </ContentControl>
                                    </Button.Content>
                                </Button>
                                <Button Background="Transparent"
                                        Style="{StaticResource HiddenButtonStyle}"
                                        Command="{Binding SpeakDigiseabassCommand}"
                                        Height="{StaticResource ButtonDimension}"
                                        Width="{StaticResource ButtonDimension}"
                                        FontSize="{StaticResource ButtonFontSize}"
                                        Margin="{StaticResource FoodItemMargin}">
                                    <Button.ToolTip>
                                        <ToolTip Style="{StaticResource DefaultToolTipRightStyle}" Content="Information about Digiseabass" />
                                    </Button.ToolTip>
                                    <Button.Content>
                                        <ContentControl Content="/Frontend.WPF;component/Images/Icons/Items/Food/digiseabass.png">
                                            <ContentControl.ContentTemplate>
                                                <DataTemplate>
                                                    <Image Source="{Binding}" Stretch="Uniform" Margin="0" />
                                                </DataTemplate>
                                            </ContentControl.ContentTemplate>
                                        </ContentControl>
                                    </Button.Content>
                                </Button>
                                <Button Background="Transparent"
                                        Style="{StaticResource HiddenButtonStyle}"
                                        Command="{Binding SpeakBlackTroutCommand}"
                                        Height="{StaticResource ButtonDimension}"
                                        Width="{StaticResource ButtonDimension}"
                                        FontSize="{StaticResource ButtonFontSize}"
                                        Margin="{StaticResource FoodItemMargin}">
                                    <Button.ToolTip>
                                        <ToolTip Style="{StaticResource DefaultToolTipRightStyle}" Content="Information about Black trout" />
                                    </Button.ToolTip>
                                    <Button.Content>
                                        <ContentControl Content="/Frontend.WPF;component/Images/Icons/Items/Food/black-trout.png">
                                            <ContentControl.ContentTemplate>
                                                <DataTemplate>
                                                    <Image Source="{Binding}" Stretch="Uniform" Margin="0" />
                                                </DataTemplate>
                                            </ContentControl.ContentTemplate>
                                        </ContentControl>
                                    </Button.Content>
                                </Button>
                                <Button Background="Transparent"
                                        Style="{StaticResource HiddenButtonStyle}"
                                        Command="{Binding SpeakGoldAcornCommand}"
                                        Height="{StaticResource ButtonDimension}"
                                        Width="{StaticResource ButtonDimension}"
                                        FontSize="{StaticResource ButtonFontSize}"
                                        Margin="{StaticResource FoodItemMargin}">
                                    <Button.ToolTip>
                                        <ToolTip Style="{StaticResource DefaultToolTipRightStyle}" Content="Information about Gold Acorn" />
                                    </Button.ToolTip>
                                    <Button.Content>
                                        <ContentControl Content="/Frontend.WPF;component/Images/Icons/Items/Food/gold-acorn.png">
                                            <ContentControl.ContentTemplate>
                                                <DataTemplate>
                                                    <Image Source="{Binding}" Stretch="Uniform" Margin="0" />
                                                </DataTemplate>
                                            </ContentControl.ContentTemplate>
                                        </ContentControl>
                                    </Button.Content>
                                </Button>
                            </WrapPanel>
                        </Grid>
                    </Border>
                </Border>
            </WrapPanel>
        </Grid>
    </Grid>
</UserControl>