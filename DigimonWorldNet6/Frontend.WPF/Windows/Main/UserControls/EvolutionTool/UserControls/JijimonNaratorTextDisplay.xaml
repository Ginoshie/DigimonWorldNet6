<UserControl x:Class="DigimonWorld.Frontend.WPF.Windows.Main.UserControls.EvolutionTool.UserControls.JijimonNaratorTextDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance }">

    <Border CornerRadius="8" BorderBrush="Black" BorderThickness="3" Margin="0, 15,25, 10" Padding="0" Background="Black">
        <Border CornerRadius="8" BorderBrush="#4A9FC5" BorderThickness="3" Padding="0" Background="#4A9FC5">
            <Border CornerRadius="5" BorderBrush="#90D9FA" BorderThickness="3" Padding="0" Background="#2E3841">
                <Border CornerRadius="5" BorderBrush="Transparent" BorderThickness="0" Padding="0" Background="#77000000">
                    <StackPanel Margin="5">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                <i:InvokeCommandAction Command="{Binding InstantDisplayCommand}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <TextBlock Text="Jijimon"
                                   Foreground="#D4D604"
                                   FontSize="15"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Margin="0,5, 0, 5"
                                   Width="545"
                                   TextWrapping="Wrap" />

                        <TextBlock Text="{Binding JijimonText}"
                                   Foreground="#B3B5B1"
                                   FontSize="14"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Margin="0, 5"
                                   Width="545"
                                   Height="132"
                                   TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
            </Border>
        </Border>
    </Border>

</UserControl>